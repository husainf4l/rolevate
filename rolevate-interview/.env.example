# Rolevate Interview Agent Configuration

# =============================================================================
# SCALING CONFIGURATION
# =============================================================================
# Number of concurrent interview processes per server
# Development: 3-5 | Production: 20-100 (based on CPU/RAM)
AGENT_PROCESSES=3

# =============================================================================
# LIVEKIT CONFIGURATION
# =============================================================================
LIVEKIT_URL=wss://your-livekit-server.livekit.cloud
LIVEKIT_API_KEY=your-api-key
LIVEKIT_API_SECRET=your-api-secret

# =============================================================================
# OPENAI CONFIGURATION
# =============================================================================
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o-mini

# =============================================================================
# ELEVENLABS TTS CONFIGURATION
# =============================================================================
ELEVENLABS_API_KEY=your-elevenlabs-api-key
ELEVENLABS_VOICE_ID=EkK5I93UQWFDigLMpZcX

# =============================================================================
# SONIOX STT CONFIGURATION
# =============================================================================
SONIOX_API_KEY=your-soniox-api-key

# =============================================================================
# AWS S3 CONFIGURATION (for video recordings)
# =============================================================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=me-central-1
AWS_BUCKET_NAME=your-s3-bucket

# =============================================================================
# BACKEND API CONFIGURATION
# =============================================================================
BACKEND_URL=https://your-backend-api.com
BACKEND_API_KEY=your-backend-api-key

# =============================================================================
# GRAPHQL API CONFIGURATION
# =============================================================================
GRAPHQL_ENDPOINT=https://rolevate.com/api/graphql

# =============================================================================
# OPTIONAL: RESOURCE LIMITS
# =============================================================================
# MAX_MEMORY_PER_PROCESS=1024  # MB per process
# MAX_CPU_PER_PROCESS=0.5      # CPU cores per process
# SESSION_TIMEOUT=3600         # Max session duration in seconds
