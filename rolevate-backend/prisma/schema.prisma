model SecurityLog {
  id            String   @id @default(cuid())
  type          String // AUTH_FAILURE, UNAUTHORIZED_ACCESS, etc.
  userId        String?
  ipHash        String // Hashed IP for privacy
  userAgentHash String? // Hashed user agent
