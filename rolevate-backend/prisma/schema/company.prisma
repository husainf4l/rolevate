// ===================================
// COMPANY MANAGEMENT
// ===================================

model Company {
  id        String   @id @default(cuid())
  name      String
  email     String?
  phone     String?
  address   String?
  website   String?
  invitationCode String? @unique
  users     User[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
